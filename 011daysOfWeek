//Задача 15: Напишите программу, которая принимает на вход цифру, обозначающую день недели, и проверяет, является ли этот день выходным.
//6 -> да
//7 -> да
//1 -> нет
System.Console.WriteLine(" ввести число от 1 до 7 ");
int x = Convert.ToInt32(Console.ReadLine());
switch (x){
    case 1 : System.Console.WriteLine(" Понедельник, Нет, Будни...");break;
    case 2 : System.Console.WriteLine(" Вторник , Нет Будни...");break;
    case 3 : System.Console.WriteLine(" Среда , Нет, будни...");break;
    case 4 : System.Console.WriteLine(" Четверг, НЕТ, Будни...");break;
    case 5 : System.Console.WriteLine(" Пятница , Нет, Будни...");break;
    case 6 : System.Console.WriteLine(" Суббота, ДА!, Выходной...");break;
    case 7 : System.Console.WriteLine(" Воскресенье, ДА!, Выходной...");break;
    default: System.Console.WriteLine(" Такого дня недели нет...");break;
}
Console.ReadKey();
